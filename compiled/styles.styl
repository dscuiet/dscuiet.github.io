@import _variables
@import _functions
@import 'GoogleSans.css'

*
  padding: 0
  margin: 0
  text-rendering: auto
  font-smoothing(antialiased)
  box-sizing: border-box

a
  color: inherit
  text-decoration: none

html 
  height: 100%

body 
  width: 100%
  height: 100%
  font: normal 14px/24px 'Google Sans','Helvetica','Helvetica Neue','Arial', sans-serif 
  overflow-x: hidden
  overflow-y scroll
  
.wrapper 
  position: relative
  width: 100%

.title-container 
  width: 100%
  height: 4rem
  center-flex(row)
  position fixed
  top 0
  z-index 9998
  background #fff
  box-shadow 0 0 5px 1px #222

.title 
  font-size: 28px
  line-height: 4rem
  font-weight 300
  text-align: center
  @media (max-width: 768px)
    font-size: 16px;
  
.container
  display: flex
  position: relative

.translate-small-container
  transform: translateX(50px)

.main 
  z-index: 1
  center-flex(column)
  min-height 550px
  height 100vh
  background: url('../images/header.svg')
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  overflow: hidden
  border-top 1px solid #eee
  transition(all 1s cubic-bezier(cubic-value))
  @media (max-width: 768px)
    height 100vh

.main:before,
.main:after
  transition(all 1s cubic-bezier(cubic-value))
  @media (max-width: 768px)
    display: none;

.cover--1
  content: ''
  position: absolute
  top 0
  width: 100%
  height: 100%
  z-index: -2
  background-color: primary-black
  right: 50%
  transition(right 1s cubic-bezier(cubic-value))
  transform skew(-45deg)

.cover--2
  content: ''
  position: absolute
  top 0
  width: 100%
  height: 100%
  z-index: -2
  background-color primary-black
  left: 50%
  transition(left 1s cubic-bezier(cubic-value))
  transform skew(-45deg)
  
.cover--1--removed
  right 150%
  @media (max-width 768px)
    display none
  
.cover--2--removed
  left 150%
  @media (max-width 768px)
    display none

.intro-container
  width: 85%
  margin: 0 auto
  @media (max-width: 768px)
    width 100%
    padding 0 20px

.intro 
  font-size: 2rem
  line-height: 250%
  font-weight: 300
  cursor: default
  transform translateY(-30px)
  opacity 0
  transition(all .5s cubic-bezier(cubic-value))
  transition-delay 1s
  @media (max-width: 768px)
    font-size: 24px
    line-height: 42px
    letter-spacing: 0
  h1
    @media (max-width 768px)
      font-size 36px

.show-head 
  transform translateY(0)
  opacity 1

.link 
  z-index: 1
  margin-top: 40px
  display: block
  position: relative
  border: 1px solid lighten(primary-black,55%)
  min-width 100px
  width: 250px;
  text-align: center
  padding: 20px 40px
  overflow: hidden
  transition(all .6s cubic-bezier(cubic-value))  
  @media (max-width: 768px)
    padding: 5px 15px
    width: 150px
    background-color: #ffffff
    color: primary-black
  &:hover 
    color: primary-black

.link:before
  content: ''
  position: absolute
  z-index: -1
  width: 100%
  height: 100%
  top: 0
  left: 0
  bottom: 0
  right: 0
  background-color: #fff
  transform: translateX(-100%)
  transition(all .5s cubic-bezier(cubic-value))
  @media (max-width: 768px)
    display: none;

.link:hover:before
  transform: translateX(0%)

.btn
  font-size: 12px
  letter-spacing: 4px
  text-transform: uppercase
  @media (max-width: 768px)
    letter-spacing: 1px

.masthead
  width 100%
  margin: 0 auto
  text-align center
  height 600px
  background-image url('../assets/img/wall2.jpeg')
  background-size cover
  background-position center
  background-repeat no-repeat
  background-attachment fixed

.nav-container 
  height: 100%
  background primary-black

.nav 
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index: 9997
  margin 0
  center-flex(row)
  transform: translateY(-100%)
  transition(all .3s cubic-bezier(cubic-value)) 
  @media (max-width: 768px)
    top 0
    bottom 0
    left 0
    right 0
    margin: 0
  .location
    color grey1
    font-size 26px
    line-height 40px
    display block
    @media (max-width 768px)
      display none
    h1
      color white1
    .other-sites
      letter-spacing 0
      a
        padding-right .5rem
        transition(all .3s cubic-bezier(cubic-value))
        &:hover
          color white1
    .where
      margin-top 20px
    .credits
      margin-top 20px

.is-active
  transform translateY(0)
  
.current
  text-decoration: line-through

.nav-toggle-container 
  position: fixed
  z-index 9998
  top: 10px 
  left: 30px
  cursor pointer
  @media (max-width: 768px)
    top 10px
    left 20px
  .toggle
    position relative
    transform translate(-50%,50%)
    width 40px
    height 40px
    background transparent
    span
      position absolute
      width 20px
      height 2px
      background #222
      transform translate(150%,0)
      transition .25s
      transition-delay 0
      &:before
        content ''
        position absolute
        width 20px
        height 2px
        top -6px
        background #222
        transform translate(0,0)
        transition-property top, transform
        transition-delay 0, .5s
        transition-duration .5s, .5s
      &:after
        content ''
        position absolute
        width 20px
        height 2px
        top 6px
        background #222
        transform translate(0,0)
        transition-property top, transform
        transition-delay 0, .5s
        transition-duration .5s, .5s
  .active
    span
      background transparent
      &:before
        top 0px
        transform rotate(45deg)  
        transition-delay 0s, .5s
      &:after
        top 0px
        transform rotate(-45deg)  
        transition-delay 0s, .5s

.navigation
  width 200px
  display: block
  .nav-item
    position: relative
    margin: .6rem auto
    padding 5px
    font-size: 32px
    letter-spacing 0
    color grey1
    line-height: 40px
    overflow: hidden
    a
      transition(all .2s cubic-bezier(cubic-value))
      color inherit 
      &:hover
        color white1

.popup
  z-index: 10000
  width: 100%
  height: 30px
  position: fixed
  bottom: 0
  background-color: #000
  color: #fff
  text-align: center
  center-flex(row)
  transform: translateY(0)
  transition(all .2s cubic-bezier(cubic-value))
  @media (max-width: 768px)
    display: none
  
.popup-closed
  transform: translateY(30px)

.popup-close
  cursor: pointer
  font-size: .6rem
  margin-left: 1rem

.about
  center-flex(column)
  background-color primary-black
  .about-wall
    center-flex(column)
    padding 100px 0
    .about-title
      color primary-grey
      font-size 4.4em
      font-weight 300
      @media (max-width 768px)
        font-size 2em
    img
      max-width 100%
    @media (max-width: 768px)
      font-size: 24px
      margin-bottom: 20px
  .row
    center-flex(row)
    padding: 5px
    width: 95%
    @media (max-width: 768px)
      center-flex(column)
    .column 
      width: 20%
      height: 180px
      margin: 2px
      background-position: center
      background-size: 100%
      background-repeat: no-repeat
      @media (max-width: 768px)
        width: 100%
        
.introduction
  center-flex(column)
  .card-container
    max-width 100%
    width 66.66666666%
    @media (max-width 768px)
      padding 0 20px
      width 100%
    .card
      padding 75px 20px
      margin 20px 0
      border-radius 2px
      .card-heading
        font-family 'Google Sans'
        font-size 40px
        line-height 1.2em
        @media (max-width 768px)
          font-size 32px
      .card-description
        font-size 18px
        margin-top 10px
        line-height 1.3333333em
        font-weight 300
        @media (max-width 768px)
          font-size 16px
      
mark 
  background transparent
  color inherit
  text-decoration underline
  span
    font-weight 700
  
.card-light
  background-color primary-grey
  color secondary-black
  
.card-dark
  background-color primary-black
  color primary-grey
  
.card-inverted
  text-align right

.c-blue
  color #4285f4

.c-yellow
  color #f4b400

.c-green
  color #0f9d58

.c-red
  color #db4437

.bg-black
  background-color primary-black
  padding 0 8px